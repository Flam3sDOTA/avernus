<root>
	<styles>
		<include src="file://{resources}/styles/custom_game/main/avernus_main.css"/>
    </styles>
    <scripts>
		<include src="file://{resources}/scripts/custom_game/avernus_shared.js"/>
        <include src="file://{resources}/scripts/custom_game/main/avernus_main.js"/>
    </scripts>
	
	<Panel hittest="false" class="Root">

		<Panel id="MinimapOverlay" hittest="true">
            <Panel id="MinimapBackdrop" />
            <DOTAMinimap id="Minimap" require-composition-layer="true" />
			<Panel hittest="false" id="MinimapFrame"/>
        </Panel>

		<Panel hittest="false" class="TopLeftMenu">
			<Button id="NewDashboardButton" class="TopLeftMenuButton" onactivate="DOTAHUDShowDashboard();" onmouseover="UIShowTextTooltip('Back to Dashboard')"  onmouseout="UIHideTextTooltip()" />
			<Button id="NewSettingsButton" class="TopLeftMenuButton" onactivate="DOTAShowSettingsPopup();" onmouseover="UIShowTextTooltip(Settings)"  onmouseout="UIHideTextTooltip()" />
			<Button id="NewDiscordButton" class="TopLeftMenuButton" onactivate="ExternalBrowserGoToURL('https://discord.gg/K82VSGexps');" onmouseover="UIShowTextTooltip(Join the Discord Server)"  onmouseout="UIHideTextTooltip()" />
		</Panel>
	</Panel>
</root>
